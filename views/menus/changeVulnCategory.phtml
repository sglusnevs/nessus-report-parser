function severity2style($severity) {

    $color = '';

    switch ($severity) {

        case 'info': $color = 'blue'; break;
        case 'low': $color = 'green'; break;
        case 'medium': $color = 'orange'; break;
        case 'high': 
        case 'critical': $color = 'red'; break;
    }

    if ($color) {

        return ' style="color:'. $color. '" ';

    } else {

        return '';
    }
}

